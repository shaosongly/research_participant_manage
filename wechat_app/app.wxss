page {
    background: #f3f4f6;
    color: #0f172a;
    font-size: 14px;
}

.container {
    padding: 16px;
}

.card {
    background: #ffffff;
    border-radius: 12px;
    padding: 16px;
    box-shadow: 0 10px 20px rgba(15, 23, 42, 0.06);
    margin-bottom: 16px;
}

.card-title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 8px;
}

.subtle {
    color: #64748b;
    font-size: 12px;
}

.button {
    height: 44px;
    line-height: 44px;
    background: #1e3a8a;
    color: #ffffff;
    border-radius: 10px;
    text-align: center;
    font-size: 15px;
    font-weight: 600;
}

.button.secondary {
    background: #e2e8f0;
    color: #0f172a;
}

.button.danger {
    background: #dc2626;
}

.button.inline {
    height: 32px;
    line-height: 32px;
    padding: 0 12px;
    width: 72px;
    font-size: 12px;
    border-radius: 999px;
}

.switch-inline {
    transform: scale(0.88);
    transform-origin: left center;
}

.field {
    margin-bottom: 16px;
}

.field-label {
    display: block;
    margin-bottom: 8px;
    font-size: 13px;
    color: #475569;
}

.field-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 8px;
}

.input {
    width: 100%;
    background: #ffffff;
    border-radius: 10px;
    border: 1px solid #e2e8f0;
    padding: 0 12px;
    height: 44px;
    line-height: 44px;
    font-size: 14px;
    box-sizing: border-box;
}

.row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
}

.button-group {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
}

.button-spread {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
}

.mode-toggle {
    display: inline-flex;
    gap: 6px;
    padding: 4px;
    background: #e2e8f0;
    border-radius: 999px;
    font-size: 12px;
}

.mode-option {
    padding: 4px 10px;
    border-radius: 999px;
    color: #475569;
}

.mode-option.active {
    background: #1e3a8a;
    color: #ffffff;
}

.hint {
    font-size: 12px;
    color: #64748b;
    margin-bottom: 8px;
}

.interval-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.interval-item {
    display: flex;
    align-items: center;
    gap: 10px;
}

.interval-input {
    flex: 1;
}

.interval-actions {
    margin-top: 10px;
}

.range-row {
    display: flex;
    align-items: center;
    gap: 8px;
}

.range-row .input {
    min-width: 0;
}

.range-sep {
    color: #94a3b8;
    font-size: 12px;
}

.history-group {
    padding: 18px 16px 10px;
    border-radius: 12px;
    border: 1px solid #f1f5f9;
    background: #f8fafc;
    margin-bottom: 12px;
}

.history-group-header {
    padding-bottom: 6px;
}

.history-section {
    margin-top: 14px;
    padding-top: 10px;
}

.history-section-title {
    font-size: 12px;
    color: #64748b;
    margin-bottom: 10px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
}

.history-section-title::before {
    content: '';
    width: 4px;
    height: 12px;
    border-radius: 999px;
    background: #cbd5f5;
}

.history-record {
    background: #ffffff;
    border-radius: 10px;
    padding: 12px 12px 12px;
    margin-bottom: 12px;
    border: 1px solid #e5e9f0;
    box-shadow: 0 4px 10px rgba(15, 23, 42, 0.06);
}

.history-record:last-child {
    margin-bottom: 2px;
}

.history-record.batch {
    border-left: 4px solid #1e3a8a;
}

.history-record-title {
    font-weight: 600;
    margin-bottom: 4px;
}

.history-actions {
    margin-top: 10px;
}

.history-record-body {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.history-group .tag {
    background: #eef2f6;
    color: #64748b;
    font-weight: 500;
    font-size: 11px;
}

.tag {
    display: inline-block;
    padding: 2px 8px;
    font-size: 12px;
    border-radius: 999px;
    background: #e2e8f0;
    color: #0f172a;
}

.tag.alert {
    background: #fee2e2;
    color: #b91c1c;
}

.list-item {
    padding: 12px 0;
    border-bottom: 1px solid #e2e8f0;
}

.list-item:last-child {
    border-bottom: none;
}

.visit-group {
    padding: 12px;
    border-radius: 10px;
    border: 1px solid #e2e8f0;
    margin-bottom: 8px;
}

.visit-group-odd {
    background: #f1f5f9;
}

.visit-group-even {
    background: #e0e7ff;
}

.list-item.visit-group {
    border-bottom: none;
}

.footer-actions {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 72px;
    padding: 12px 16px 20px;
    background: #ffffff;
    border-top: 1px solid #e2e8f0;
    z-index: 20;
}

.footer-spacer {
    height: 150px;
}

.footer-actions.detail {
    bottom: 16px;
    border-radius: 16px;
    margin: 0 16px;
    box-shadow: 0 8px 20px rgba(15, 23, 42, 0.08);
}

.footer-spacer.detail {
    height: 96px;
}
